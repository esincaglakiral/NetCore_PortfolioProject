@using EntityLayer.Concrete
@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmetlerim</h4>
                <div class="table-responsive">
                    <br />
                    <table class="table table-bordered table-hover" style="color:white;">
                        <thead>
                            <tr>
                                <th scope="col" class="sort" data-sort="name">#</th>
                                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                                <th scope="col" class="sort" data-sort="status">Resim</th>
                                <th scope="col" class="sort text-center" data-sort="completion">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {

                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@x.Title</td>
                                    <td><image style="width:40px; height:40px;" src="@x.ImageUrl"></image></td>
                                    <td class="text-center">
                                        <a href="/Service/DeleteService/@x.ServiceID" class="btn btn-outline-danger"><i class="mdi mdi-close-box-outline"></i> Sil</a>
                                        <a href="/Service/UpdateService/@x.ServiceID" class="btn btn-outline-info" style="margin-left:25px;"><i class="mdi mdi-border-color"></i> Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<a href="/Service/CreateService" class="btn btn-outline-primary"><i class="mdi mdi-plus-box"></i> Yeni Hizmet Ekle</a>

