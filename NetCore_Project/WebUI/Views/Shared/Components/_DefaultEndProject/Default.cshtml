﻿@using EntityLayer.Concrete
@model List<Portfolio>

<div class="col-md-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<div class="d-flex flex-row justify-content-between">
				<h4 class="card-title mb-1">Son 5 Projem</h4>
				<p class="text-muted mb-1">En Son Beğenilen Top 5</p>
			</div>
			@foreach (var item in Model)
			{
				<div class="row">
					<div class="col-12">
						<div class="preview-list">
							<div class="preview-item border-bottom">
								<div class="preview-thumbnail">
									<div class="preview-icon bg-primary">
										<img src="@item.ImageUrl" style="width:45px; height:45px;" />
									</div>
								</div>
								<div class="preview-item-content d-sm-flex flex-grow">
									<div class="flex-grow">
										<h6 class="preview-subject">@item.Name</h6>
										<p class="text-muted mb-0">@item.Title</p>
									</div>
									<div class="mr-auto text-sm-right pt-2 pt-sm-0">
										<p class="text-muted">15 Gün Önce</p>
										<p class="text-muted mb-0">35 Beğeni, 10 Yorum </p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>
