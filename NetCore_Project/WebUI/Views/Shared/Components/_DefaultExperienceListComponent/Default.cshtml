﻿@using EntityLayer.Concrete
@model List<Experience>
@{
	string deger = null;
}

<div class="section px-3 px-lg-4 pt-5" id="experience">
	<div class="container-narrow">
		<div class="text-center mb-5">
			<h2 class="marker marker-center">Deneyimlerim</h2>
		</div>
		<div class="row">
			@foreach (var item in Model)
			{
				if (item.ExperienceID % 2 == 0)
				{
					deger = "fade-right";
				}
				if (item.ExperienceID % 2 == 1)
				{
					deger = "fade-left";
				}


				<div class="col-md-6">
					<div class="card mb-3" data-aos="@deger" data-aos-delay="100">
						<div class="card-header px-3 py-2">
							<div class="d-flex justify-content-between">
								<div>
									<h3 class="h5 mb-1">@item.Title</h3>
									<div class="text-muted text-small"><h5>@item.Name </h5><h6>@item.Date</h6></div>
								</div><img src="@item.ImageUrl" width="48" height="48" alt="ui-ux" />
							</div>
						</div>
						<div class="card-body px-3 py-2">
							<p>@item.Description</p>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>