﻿@using EntityLayer.Concrete
@model List<UserList>

<div class="col-md-6 col-xl-4 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<div class="d-flex flex-row justify-content-between">
				<h4 class="card-title">Kullanıcılar</h4>
				<p class="text-muted mb-1 small">Tümünü Görüntüle</p>
			</div>
			@foreach (var x in Model)
			{

				<div class="preview-list">
					<div class="preview-item border-bottom">
						<div class="preview-thumbnail">
							<img src="~/userimage/@x.ImageUrl" alt="image" class="rounded-circle" />
						</div>
						<div class="preview-item-content d-flex flex-grow">
							<div class="flex-grow">
								<div class="d-flex d-md-block d-xl-flex justify-content-between">
									<h6 class="preview-subject">@x.Name @x.Surname</h6>
									<p class="text-muted text-small">2024-04-22</p>
								</div>
								<p class="text-muted">@x.Email </p>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>
