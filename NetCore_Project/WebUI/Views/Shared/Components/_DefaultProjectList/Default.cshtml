﻿@using EntityLayer.Concrete
@model List<Portfolio>
@{
	int sayi = 0;
}

<div class="row ">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Projelerim</h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th>
									<div class="form-check form-check-muted m-0">
										<label class="form-check-label">
											<input type="checkbox" class="form-check-input">
										</label>
									</div>

								<th> # </th>
								<th> Proje Adı </th>
								<th> Başlık </th>
								<th> Url </th>
								<th> Tarih </th>
								<th> Resim </th>
								<th> Durumu </th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								sayi++;
								<tr>
									<td>
										<div class="form-check form-check-muted m-0">
											<label class="form-check-label">
												<input type="checkbox" class="form-check-input">
											</label>
										</div>
									</td>
									<td> @sayi </td>
									<td> @item.Name </td>
									<td> @item.Title </td>
									<td> @item.Url </td>
									<td> @DateTime.Now.ToString("dd-MM-yyy")</td>
									<td> <img src="@item.ImageUrl" style="width:40px; height:40px;" /> </td>
									<td>
										<div class="badge badge-outline-success">Tamamlandı</div>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>