﻿@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayi = 0; 
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeteneklerim</h4>
                <div class="table-responsive">
                    <br />
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Değer</th>
                                <th scope="col" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                sayi++;

                                int value = 0;
                                string progressBarClass = "";

                                if (int.TryParse(item.Value, out value))
                                {
                                    if (value <= 50)
                                    {
                                        progressBarClass = "bg-danger";
                                    }
                                    else if (value <= 70)
                                    {
                                        progressBarClass = "bg-warning";
                                    }
                                    else
                                    {
                                        progressBarClass = "bg-success";
                                    }
                                }

                                <tr>
                                    <td>@sayi</td>
                                    <td>@item.Title</td>
                                    <td>
                                        <span class="completion mr-2">@item.Value%</span>
                                        <div class="progress">
                                            <div class="progress-bar @progressBarClass" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-danger"><i class="ni ni-fat-remove"></i> Sil</a>
                                        <a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-outline-info" style="margin-left:25px;"><i class="ni ni-scissors"></i> Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<a href="/Skill/AddSkill" class="btn btn-outline-primary"><i class="mdi mdi-plus-box"></i> Yeni Yetenek Ekle</a>
